<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/chat_bg_rice_yellow" >

    <ListView
        android:id="@+id/chat_lv_message_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null">
    </ListView>

    <LinearLayout
        android:id="@+id/chat_lyt_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/chat_footer_bg_bitmap" >

        <EditText
            android:id="@+id/chat_et_msg2send"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:hint="@string/press_to_intput_text" />

        <Button
            android:id="@+id/chat_btn_send"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1"
            android:background="@drawable/chat_btn_send_normal"
            android:textSize="18sp"
            android:text="@string/send" />
    </LinearLayout>

</RelativeLayout>